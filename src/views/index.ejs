<% include partials/_header %>
    <div class="container">
        <div class="row">
            <!-- Formulario -->
            <div class="col-md-5">
                <div class="card">
                    <div class="card-body">
                        <form action="/add" method="POST">
                            <div class="form-group">
                                <input type="text" name="title" placeholder="Titulo" class="form-control">
                            </div>
                            <div class="form-group">
                                <textarea name="description" cols="80" placeholder="Descripcion" class="form-control"></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary btn-block">Agregar</button>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Lista -->
            <div class="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>NÂ°</th>
                            <th>Titulo</th>
                            <th>Descripcion</th>
                            <th>Operaciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for(let i = 0; i < tareas.length; i++){ %>
                            <tr>
                                <td><%=i + 1 %></td>
                                <td><%=tareas[i].title %></td>
                                <td><%=tareas[i].description %></td>
                                <td>
                                    <a href="/hecho/<%=tareas[i]._id%>" class="btn btn-sm <%=tareas[i].status ? 'btn-success' : 'btn-dark' %>">Realizado</a>
                                    <a href="/delete/<%=tareas[i]._id%>" class="btn btn-sm btn-danger">Eliminar</a>
                                    <a href="/edit/<%= tareas[i]._id%>" class="btn btn-sm btn-info">Editar</a>
                                </td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<% include partials/_footer %>